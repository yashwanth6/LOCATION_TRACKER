<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Select Country Code"
        android:textColor="@android:color/black"
        android:textSize="20dip"
        android:typeface="serif" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:hint="Type  first two letters of your country name"
        android:text="">

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Register your phone number"
        android:textColor="@android:color/black"
        android:textSize="20dip"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Click on browse button"
            android:inputType="phone" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentRight="true"
            android:background="#FF1D7AB1"
            android:onClick="getcontactnumber"
            android:text="Browse"
            android:textColor="#ffffff"
            android:textSize="20dip"
            android:typeface="serif" />

    </LinearLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#FF1D7AB1"
        android:onClick="submit"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="20dip"
        android:typeface="serif" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

</LinearLayout>

</LinearLayout>
</LinearLayout>